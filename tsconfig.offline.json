    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "declaration": false,
    "sourceMap": false,
